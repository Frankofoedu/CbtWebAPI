@model IEnumerable<rating.Data.User>

@{
    ViewBag.Title = "Verify User";
    bool isMoreThanSingle = false;
}

<h2>Verify Details</h2>

@{
    string message = (string)ViewBag.Message;
}

@if (!string.IsNullOrWhiteSpace(message))
{
    <div class="alert alert-success alert-dismissable show">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        @message <br />
        @Html.ActionLink("Go back to Search ", "CheckUserSearch")
    </div>

}

@if (Model != null)
{
    if (Model.Count() > 1)
    {
        isMoreThanSingle = true;
    }


    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Password)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Centre)
            </th>
            @if (isMoreThanSingle)
            {
                <th></th>
            }
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Password)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Centre)
                </td>
                <td>
                    @if (isMoreThanSingle)
                    {
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id, returnUrl = Request.Url.AbsoluteUri })
                    }
                </td>
            </tr>
        }

    </table>
}
